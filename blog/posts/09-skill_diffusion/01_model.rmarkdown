}

# Clean data for fixed effects estimation
fe_data <- generalized_data[!is.na(diffusion_outcome) & 
                           !is.na(structural_distance) & 
                           !is.na(education_diff) & 
                           !is.na(wage_diff) &
                           is.finite(structural_distance) &
                           is.finite(education_diff) &
                           is.finite(wage_diff)]

# Split by skill type
